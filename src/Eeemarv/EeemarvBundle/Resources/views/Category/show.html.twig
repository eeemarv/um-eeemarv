            <tr>
                <th>Messagecount</th>
                <td>{{ entity.messageCount }}</td>
            </tr>
            <tr>
                <th>Offercount</th>
                <td>{{ entity.offerCount }}</td>
            </tr>
            <tr>
                <th>Wantcount</th>
                <td>{{ entity.wantCount }}</td>
            </tr>

            <tr>
                <th>{{ 'created_at'|trans }}</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
