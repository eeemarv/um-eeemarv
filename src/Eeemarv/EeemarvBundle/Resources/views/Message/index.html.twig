{% extends 'EeemarvBundle::base.html.twig' %}

{% block page_header_inner %}{{ 'messages'|trans }}{% endblock %}

{% block inner_content -%}
    <table class="table table-striped table-condensed">
        <thead>
            <tr><th>
				<div class="row-fluid">				
                    <div class="span3">{{ 'member'|trans }}</div> 				
					<div class="span7">{{ 'subject'|trans }}</div>
					<div class="span2">{{ 'date'|trans }}</div> 
				</div>                
            </th></tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr><td>
				<div class="row-fluid">

					<div class="span3"><a href="{{ path('lets_transact_members_show', { 'code': entity.createdBy.code }) }}">
						{{ entity.createdBy.code }} {{ entity.createdBy.username }}</a></div>                			
					<div class="span7">
						<a href="{{ path('lets_transact_messages_show', { 'slug': entity.slug }) }}">{{ entity.subject }}</a>
					</div>					
					
					<div class="span2">{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d') }}{% endif %}</div>
				</div>
				{#<div class="row-fluid">					
					<div class="span7 offset1">{% if entity.category %}<i class="icon-tree"></i>{{ entity.category.name }}{% endif %}</div>

				</div>
				<div class="row-fluid">					
					<div class="span7 offset1"><i class="icon-tags"></i> {% if entity.category %}{{ entity.category.name }}{% endif %}</div>
					<div class="span2"><i class="icon-comments"></i> {{ entity.createdBy.code }}</div>                
					<div class="span2"><i class="icon-eye-open"></i> {{ entity.createdBy.username }}</div>
				</div>	#}			
				
				
					
            </td></tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('eeemarv_eeemarv_message_new') }}">
                {{ 'message_new'|trans }}
            </a>
        </li>
    </ul>
    {% endblock %}
