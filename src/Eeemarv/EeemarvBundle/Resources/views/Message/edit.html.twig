{% extends 'EeemarvBundle::base.html.twig' %}
{% form_theme form 'EeemarvBundle:Form:fields.html.twig' %}

{% block page_header_inner %}{{ 'edit'|trans }}: {{ message.subject }}{% endblock %}

{% block inner_content -%}

<form action="{{ path('eeemarv_eeemarv_message_update', { 'id': message.id }) }}" method="post" {{ form_enctype(form) }}>
	<input type="hidden" name="_method" value="PUT" />
	
	<div class="row-fluid">

		{{ form_widget(form.subject) }}

		{{ form_widget(form.category)  }}
	</div>
	<div class="row-fluid">
		{{ form_widget(form.content) }}

	</div>
		   
	<div class="row-fluid top-10">
		<div class="input-append span12">
			{{ form_widget(form.price) }}
			<span class="add-on">{{ 'currency_plural'|trans({}, 'site') }}</span>
		</div>
	</div>          
	

	{{ form_widget(form) }}
	
  
	{{ form_rest(form) }}
	
	<p>
		<button type="submit" class="btn btn-primary">{{ 'edit'|trans }}</button>
	</p>
</form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('eeemarv_eeemarv_message_index') }}">
            {{ 'back_to_list'|trans }}
        </a>
    </li>
</ul>





{% endblock %}
