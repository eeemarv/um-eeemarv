{% extends 'EeemarvBundle::base.html.twig' %}

{% block page_header_inner %}{{ 'transactions'|trans }}{% endblock %}
{% block buttons %}

	<a href="{{ path('eeemarv_eeemarv_transaction_new') }}" class="btn btn-success">{{ 'new'|trans }}</a>
{% endblock %} 

{% block inner_content -%}
{{ knp_pagination_render(pagination, null, {}, {'alignment': 'right', 'first_label': '<<', 'last_label': '>>', 'prev_label': '<', 'next_label': '>'}) }}	
    <table class="table table-striped table-condensed">
        <thead>
            <tr><th>
            <div class="row-fluid">				
                    <div class="span2{% if pagination.isSorted('t.transactionAt') %} sorted{% endif %}" >{{ knp_pagination_sortable(pagination, 'date'|trans, 't.transactionAt') }}</div> 				
					<div class="span3{% if pagination.isSorted('t.transactionAt') %} sorted{% endif %}">{{ knp_pagination_sortable(pagination, 'from'|trans, 't.fromCode') }}</div>
					<div class="span3">{{ knp_pagination_sortable(pagination, 'to'|trans, 't.toCode') }}</div>
					<div class="span2">{{ knp_pagination_sortable(pagination, 'distance'|trans, 't.distance') }}</div>				
					<div class="span2">{{ knp_pagination_sortable(pagination, 'currency_plural'|trans({}, 'site'), 't.amount') }}</div> 
			</div> 
            <div class="row-fluid">	
            <div class="span1"></div>
            <div class="span11">{{ knp_pagination_sortable(pagination, 'description'|trans, 't.description') }}</div>
            </div>			
            </th></tr>
        </thead>
        <tbody>
        {% for transaction in pagination %}
            <tr{% if transaction.annulatedBy or transaction.annulationOf %} class="error"{% elseif not transaction.fromUser or not transaction.toUser %} class="info"{% elseif transaction.external %} class="warning"{% endif %}>
            <td>
				<div class="row-fluid">				
                    <div class="span2">
						{{ transaction.transactionAt|date('Y-m-d') }}
					</div> 				
					<div class="span3">
						<a href="{{ path('eeemarv_eeemarv_user_show', { 'code': transaction.fromCode }) }}"> {{ transaction.fromCode|e }} {{ transaction.fromName|e }}</a>
					</div>
					<div class="span3">
						<i class="fa fa-chevron-right"></i><a href="{{ path('eeemarv_eeemarv_user_show', { 'code': transaction.toCode }) }}"> {{ transaction.toCode|e }} {{ transaction.toName|e }}</a>
					</div>
					<div class="span2">
						{{ transaction.distance|distance }}
					</div>		
					<div class="span2">
						{{ transaction.amount // currency_rate }}
					</div> 
				</div>
				<div class="row-fluid">
				<div class="span1"></div>
				<div class="span11"><a href="{{ path('eeemarv_eeemarv_transaction_show', { 'id': transaction.id }) }}">{{ transaction.description|e }}</a></div>
				</div>				
				
            </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{{ knp_pagination_render(pagination, null, {}, {'alignment': 'right', 'first_label': '<<', 'last_label': '>>', 'prev_label': '<', 'next_label': '>'}) }}    
{% endblock %}
