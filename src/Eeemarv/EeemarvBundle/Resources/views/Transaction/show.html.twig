{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Transaction</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ entity.amount // currency_rate }}</td>
            </tr>
            <tr>
                <th>Fromcode</th>
                <td>{{ entity.fromCode }}</td>
            </tr>
            <tr>
                <th>Tocode</th>
                <td>{{ entity.toCode }}</td>
            </tr>

            <tr>
                <th>Fromname</th>
                <td>{{ entity.fromName }}</td>
            </tr>
            <tr>
                <th>Toname</th>
                <td>{{ entity.toName }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Subamount</th>
                <td>{{ entity.subAmount }}</td>
            </tr>
            <tr>
                <th>Uniqueid</th>
                <td>{{ entity.uniqueId }}</td>
            </tr>
            <tr>
                <th>External</th>
                <td>{{ entity.external }}</td>
            </tr>
            <tr>
                <th>Transactionat</th>
                <td>{{ entity.transactionAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('lets_transact_transactions') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
